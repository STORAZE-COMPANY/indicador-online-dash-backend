{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",                         
    "paths": {
      "@app/*": ["app/*"],
      "@modules/*": ["modules/*"],
      "@auth/*": ["modules/auth/*"],
      "@users/*": ["modules/users/*"],
      "@companies/*": ["modules/companies/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["shared/*"]
    },
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
